<h1>タスク詳細ページ</h1>

<table class="table table-striped">
  <tr>
    <th>ユーザ</th>
    <td><%= @task.user.name %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
</table>
<% if current_user == @task.user %>
  <%= link_to "このタスクを編集する", edit_task_path(@task), class: "btn btn-light" %>
  <%= link_to "このタスクを削除する", @task, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger" %>
<% end %>
